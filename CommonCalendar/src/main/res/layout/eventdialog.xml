<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="2"
    >

    <EditText
        android:id="@+id/ET_MAIN_DialogEVENT"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:textSize="16dp"
        android:padding="16dp"
        android:hint="Type Event"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/TV_MAIN_startClock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginTop="15dp"
            android:hint="start time"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableBottom="@drawable/ic_baseline_access_time_128"
            android:background="@android:drawable/editbox_background"/>

        <TextView
            android:id="@+id/TV_MAIN_endClock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginTop="15dp"
            android:hint="end time"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableBottom="@drawable/ic_baseline_access_time_128"
            android:background="@android:drawable/editbox_background"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BUTTON_MAIN_DIALOG_MAIN_BUTTONCANCEL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BUTTON_MAIN_DIALOG_MAIN_BUTTONADD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ADD"
            />


    </LinearLayout>

</LinearLayout>